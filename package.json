{
  "name": "appi",
  "version": "1.0.0",
  "description": "Unopinionated modular framwork for server applications",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel ./src --out-dir dist --copy-files --ignore **/node_modules/**/*.js",
    "build:dev": "./node_modules/.bin/babel ./src --out-dir dist --copy-files --ignore **/node_modules/**/*.js --watch ",
    "test-unit": "./node_modules/.bin/ava src/**/*.test.js",
    "test-unit:dev": "npm run test-unit -- --watch",
    "lint": "./node_modules/.bin/prelint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/labs42/appi.git"
  },
  "keywords": [
    "server",
    "framework",
    "di",
    "appi"
  ],
  "author": "Alexander I. Antipin <alex@antipin.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/labs42/appi/issues"
  },
  "homepage": "https://github.com/labs42/appi#readme",
  "pre-commit": [
    "lint",
    "test-unit"
  ],
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.14.0",
    "babel-preset-labs42": "1.0.1",
    "eslint-config-labs42": "1.0.3",
    "pre-commit": "1.1.3",
    "prelint": "1.0.1",
    "sinon": "1.17.6"
  },
  "ava": {
    "failFast": false,
    "require": "babel-register",
    "babel": {
      "babelrc": true
    }
  },
  "dependencies": {
    "joi": "9.0.4"
  }
}
