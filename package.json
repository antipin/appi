{
  "name": "appi",
  "version": "0.0.6",
  "description": "Unopinionated modular framwork for server applications",
  "main": "dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel ./src --out-dir dist --copy-files --ignore **/node_modules/**/*.js",
    "build:dev": "./node_modules/.bin/babel ./src --out-dir dist --copy-files --ignore **/node_modules/**/*.js --watch ",
    "test": "npm run test-unit",
    "test-unit": "./node_modules/.bin/ava test/**/*.test.js src/**/*.test.js ",
    "test-unit:dev": "npm run test-unit -- --watch",
    "test-integration": "TEST_COMMAND='./node_modules/.bin/ava --verbose src/**/*.test-integration.js' docker-compose --project-name integration up --abort-on-container-exit appi",
    "test-integration:dev": "TEST_COMMAND='./node_modules/.bin/ava --verbose --watch src/**/*.test-integration.js' docker-compose --project-name integration-dev up --abort-on-container-exit appi",
    "lint": "./node_modules/.bin/prelint",
    "prepublish": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/labs42/appi.git"
  },
  "keywords": [
    "server",
    "framework",
    "di",
    "appi"
  ],
  "author": "Alexander I. Antipin <alex@antipin.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/labs42/appi/issues"
  },
  "homepage": "https://github.com/labs42/appi#readme",
  "pre-commit": [
    "lint",
    "test-unit"
  ],
  "dependencies": {
    "bell": "8.2.1",
    "good": "7.0.2",
    "good-console": "6.1.2",
    "good-squeeze": "5.0.0",
    "ha-mongo-client": "1.0.3",
    "hapi": "15.1.1",
    "intel": "1.1.1",
    "joi": "9.0.4"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-cli": "6.16.0",
    "babel-preset-labs42": "1.0.2",
    "chance": "1.0.4",
    "eslint-config-labs42": "1.0.3",
    "lodash": "4.16.4",
    "pre-commit": "1.1.3",
    "prelint": "1.0.1",
    "sinon": "1.17.6"
  },
  "ava": {
    "failFast": false,
    "require": "babel-register",
    "babel": {
      "babelrc": true
    }
  }
}
